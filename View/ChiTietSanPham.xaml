<Window x:Class="ShopLink.View.ChiTietSanPham"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ShopLink.View"
      mc:Ignorable="d" 
      Title="ChiTietSanPham" Width="1440" Height="900" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" Background ="#F5F6F8">

    <Grid>
        <!--Thanh công cụ-->
        <Grid Height="175" Width="1440" VerticalAlignment="Top" Background="#D9D9D9">
            <!--Logo-->
            <StackPanel Orientation="Horizontal">
                <Border BorderBrush="#FF3C8AF6" CornerRadius="10" BorderThickness="6" Margin="0 ,0,1229,0"  Height="176" Width="203">
                    <TextBlock Text="ShopLink" Foreground="#478EF0" FontSize="45" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" Margin="0,54,0,37"/>
                </Border>
            </StackPanel>
            <!--Tìm kiếm-->
            <Border BorderBrush="Black" BorderThickness="2" CornerRadius="4" Width="700" Height="50">
                <DockPanel Width="700" Height="50" Background="White">
                    <Image Source="C:\Users\Admin\source\repos\ShopLink\Asset\Images\icons8-search-50.png"></Image>
                    <TextBox></TextBox>
                </DockPanel>
            </Border>

            <StackPanel Width="700" Margin="370,122,370,0" Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="Mới nhất" Width="150" Height="40" FontSize="12.5" Background="#FFE8C0C0" Margin="5,5,117,5"></Button>
                <Button Content="Bán chạy" Width="150" Height="40" FontSize="12.5" Background="#FFE8C0C0" Margin="5, 5, 117, 5"></Button>
                <Button Content="Đắt nhất" Width="150" Height="40" FontSize="12.5" Background="#FFE8C0C0" Margin="5"/>
            </StackPanel>
            <!--Tính năng-->
            <StackPanel Margin="1150,10,0,73" Orientation="Horizontal">
                <Button  Content="💬" Width="50" Height="50" Margin="0,0,10,0"/>
                <Button Content="🔔" Width="50" Height="50"  Margin="10,0,10,0"/>
                <StackPanel  Orientation="Horizontal" Width="151" Margin="10,0,0,0">
                    <Button Command="{Binding ThongTinUserCommand}" Content="Thông tin" FontWeight="bold" Height="35" Width="115" Padding="10" Background="Gray" Foreground="Black"/>
                    <Button Content="👤" Width="35" Height="35" Background="Gray"/>
                </StackPanel>
            </StackPanel>
            <Button Content="🛒" FontSize="30" RenderTransformOrigin="1.175,2.287" Margin="1344,112,10,0" Background="#D9D9D9"/>
        </Grid>
        <!--Chi tiết sản phẩm-->
        <Border Width ="1200"  BorderThickness="3" BorderBrush="black" CornerRadius="8" Margin="120,200,120,45">
            <Grid  Background="#F0EEEE" >
                <!--Chia bố cục-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!--Phần 1-->
                <StackPanel Width="600" Height="655">
                    <Border Width="400" Height="400" Margin="100,40,100,0" BorderBrush="black" BorderThickness="2" CornerRadius="6">
                        <Image Source="{Binding HinhAnh}" Stretch="UniformToFill" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <Border Margin="100,40,100,0" Height="120" BorderBrush="black" BorderThickness="1" CornerRadius="4">
                        <Grid  Background="white">
                            <TextBlock Text="👤" FontSize="50" Margin="10,22,293,22" RenderTransformOrigin="0.673,0.347"/>
                            <TextBlock Text="{Binding TextTenStoreCommand}" FontSize="25" FontWeight="bold" Margin="112,5,50,60"></TextBlock>
                            <Button Content ="Xem Store" Background="#CEB2B2" FontSize="25" FontWeight="Bold"  Margin="112,65,50,5"></Button>
                        </Grid>
                    </Border>
                </StackPanel>

                <!--Vạch phân cách-->
                <TextBlock Background="Black" Margin="596,30,0,30"></TextBlock>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="{Binding TenSanPham}" FontSize="25" FontWeight="Bold" Height="60" Margin="50,50,50,0" TextAlignment="Center"></TextBlock>
                    <TextBlock Text="{Binding MoTaSanPham}" FontSize="25" Height="60" Margin="50,50,50,0" TextAlignment="Center"></TextBlock>
                    <TextBlock FontSize="25" Height="60" Margin="50,50,50,0" TextAlignment="Center">
                        <Run Text="Giá: "/>
                        <Run Text="{Binding GiaBan}" FontWeight="Bold"/>
                        <Run Text="VNĐ"/>
                    </TextBlock>
                    <StackPanel Margin="50,50,50,0" Height="50" Orientation="Horizontal">
                        <TextBlock Text="Số lượng: " FontSize="25" Width="110"/>
                        <Button Content="-" FontSize="30"  Command="{Binding GiamSLCommand}" Width="50" Height="50" />
                        <TextBlock Text="{Binding GioHang.SoLuong}" Background="#EEE8E8" Height="50" Width="100" FontSize="25" FontWeight="bold"/>
                        <Button Content="+" FontSize="30"  Command="{Binding TangSLCommand}" Width="50" Height="50"/>
                        <TextBlock Text="{Binding TrangThaiSanPhamCommand}" FontSize="25" TextAlignment="center" Width="190"/>
                    </StackPanel>
                    <Button Content="Thêm vào giỏ hàng" Background="#D25555"  FontSize="25" FontWeight="bold" Height="60" Margin="50,30,50,0"/>
                    <Button Content="Mua hàng"  Background="#D25555"  FontSize="25" FontWeight="bold" Height="60" Margin="50,25,50,0"/>

                </StackPanel>
                
                

            </Grid>
        </Border>

    </Grid>
</Window>
