<Window x:Class="ShopLink.View.TaoTaiKhoanUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopLink.View"
        mc:Ignorable="d"
        Title="TaoTaiKhoanUser" Width="1440" Height="900"  WindowStartupLocation="CenterScreen" Background ="#F5F6F8">
    <Grid>
        <Border Width="500" Height="600" BorderBrush="Black" BorderThickness="3" CornerRadius="8">
            <Grid  Background="White" >
                <!--Logo-->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,474" Width="500">
                    <Image Source="/Asset/Images/LogIn_Store.jpg" Width="100" Height="100" Margin="60,0,40,0"/>
                    <TextBlock Text="User" FontSize="35" FontWeight="Bold" Foreground="#3A7BD5" Width="100" Height="50" TextAlignment="center" VerticalAlignment="Center"/>
                    <Image Source="/Asset/Images/LogIn_Shiper.jpg" Width="100" Height="100" Margin="40,0,60,0"/>
                </StackPanel>
                <TextBlock Background="Black" Margin="40,115,40,477"></TextBlock>
                
                <!--Nhập dữ liêu-->
                <StackPanel Orientation="Vertical" Width="500" Height="350">
                    <StackPanel Orientation="Horizontal" Width="500" Height="70">
                        <TextBlock Text="Tên:" FontSize="25" FontWeight="Bold" Margin="50, 10,0, 10" Width="151" />
                        <TextBox  Height="50" Text="{Binding Users.TenUser}" Margin="0,10,0,10" FontSize="25" Background="#D9D9D9" Width="250"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Width="500" Height="70">
                        <TextBlock Text="PassWord:" FontSize="25" FontWeight="Bold" Margin="50, 10,0, 10" Width="151" />
                        <PasswordBox x:Name="PasswordBox"  Height="50"  Margin="0,10,0,10" FontSize="25" Background="#D9D9D9" Width="250"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Width="500" Height="70">
                        <TextBlock Text="SĐT:" FontSize="25" FontWeight="Bold" Margin="50, 10,0, 10" Width="151" />
                        <TextBox  Height="50" Margin="0,10,0,10" Text="{Binding Users.SDTUser}" FontSize="25" Background="#D9D9D9" Width="250"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Width="500" Height="70">
                        <TextBlock Text="Địa chỉ:" FontSize="25" FontWeight="Bold" Margin="50, 10,0, 10" Width="151" />
                        <TextBox  Height="50" Margin="0,10,0,10" Text="{Binding Users.DiaChiUser}" FontSize="25" Background="#D9D9D9" Width="250"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Width="500" Height="70">
                        <TextBlock Text="Email:" FontSize="25" FontWeight="Bold" Margin="50, 10,0, 10" Width="151" />
                        <TextBox  Height="50" Margin="0,10,0,10"  Text="{Binding Users.EmailUser}" FontSize="25" Background="#D9D9D9" Width="250"/>
                    </StackPanel>
                </StackPanel>
                
                <!--Tạo tài khoản-->
                <Border  Width="250" Margin="125,485,119,45" BorderBrush="Black"  BorderThickness="2" CornerRadius="5">
                    <Button Content="Tạo tài khoản" Command="{Binding TaoTaiKhoanUserCommand}"  CommandParameter="{Binding ElementName=PasswordBox}" FontSize="30" FontWeight="bold" Foreground="Black"  Background="#D25555"/>
                </Border>
                <Button Content="Đăng nhập" Command ="{Binding DangNhapUserCommand}" Foreground="red" Background="white" FontSize="25" FontWeight="BOLD" Margin="183,553,171,6"/>


            </Grid>
        </Border>

    </Grid>
</Window>
