<Window x:Class="ShopLink.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopLink.View"
        mc:Ignorable="d"
        DataContext="{StaticResource MainVM}"
        Title="MainWindow"  Width="1440" Height="900"  WindowStartupLocation="CenterScreen" Background ="#F5F6F8">

    <Grid>
        <Grid>
            <Grid Width="400" Height ="480" Background="#FFFFFF">
                <!--Logo-->
                <Image Source="C:\Users\Admin\source\repos\ShopLink\Asset\Images\LogIn_Store.jpg" Margin="10,-2,292,374"/>
                <Image Source="/Asset/Images/LogIn_Shiper.jpg" Margin="280,0,5,360"/>
                <TextBlock Text="ShopLink" Foreground="#478EF0" FontSize="35" FontWeight="Bold" Margin="128,34,110,386"/>
                <TextBlock Background="Black" Height="2" Margin="20,122,20,356"/>
                <!--User-->
                <TextBlock Text="User :" FontSize="20" FontWeight="Bold"  Margin="20,155,284,285" />
                <TextBox  Height="50" Background="#D9D9D9" Margin="128,150,18,280"/>
                <!--Password-->
                <TextBlock Text="PassWord:"  FontSize="20" FontWeight="Bold" Margin="20,218,284,218"/>
                <PasswordBox Height="50" Background="#D9D9D9" Margin="128,215,18,215"/>
                <!--Đăng nhập-->
                <Button  Foreground ="White" Content="Đăng nhập" FontSize="25" FontWeight="Bold"  Width="360" Height="50" Background="#007BFF" Margin="20,289,20,141"/>
                <!--Quên mật khẩu-->
                <TextBlock Foreground ="red" Text="Quên mật khẩu ?" FontSize ="25" VerticalAlignment="Bottom" Margin="20,0,180,106"/>
                <!--Bắt đầu-->
                <StackPanel>
                    <Border BorderBrush="Black"   BorderThickness="2" CornerRadius="10" Height="50" Margin="127,390,127,40" Padding ="2">
                        <Button  Content="Bắt đầu" Foreground="white" FontSize="15" FontWeight="Bold" Background="#0C3CFF"
                         Command="{Binding OpenUser}"
                />
                    </Border>
                </StackPanel>
                <!--Border-->
                <Border BorderBrush="Black" BorderThickness="2" CornerRadius="10"/>
            </Grid>
        </Grid>

    </Grid>
</Window>
