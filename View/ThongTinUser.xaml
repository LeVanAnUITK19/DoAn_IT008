<Window x:Class="ShopLink.View.ThongTinUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopLink.View"
        mc:Ignorable="d"
        Title="ThongTinUser"  Width="1440" Height="900"  WindowStartupLocation="CenterScreen" Background ="#F5F6F8">
    <Grid>
        
        <Border Width="1000" Height="700" BorderBrush ="Black" BorderThickness="2" CornerRadius="8">
            
            <Grid Background="#D9D9D9">
                <!--Chia bố cục-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="580 "/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <!--Logo-->
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Background="#CFC0C0">
                    <TextBlock Text="👤" TextAlignment="Center"  FontSize="50" Width="100" Height="71"></TextBlock>
                    <TextBlock Width="300" Height="60" Background="white"></TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                    <Image Source="C:\Users\Admin\source\repos\ShopLink\Asset\Images\LogIn_Store.jpg" Margin="50,10,50,10" Width="100" Height="100"/>
                    <TextBlock Text="User"   Width="100" Height="47" TextAlignment="Center"   Foreground="#478EF0" FontSize="35" FontWeight="Bold" Margin="0,10,0,10" />
                    <Image Source="C:\Users\Admin\source\repos\ShopLink\Asset\Images\LogIn_Shiper.jpg" Margin="50,10,50,10" Width="100" Height="100"/>
                </StackPanel>
                <!--Phần 1-->
                <StackPanel Grid.Row="1" Grid.Column="0" Width="500" Height="400" Orientation="Vertical" VerticalAlignment="Top">
                    <StackPanel  Orientation="Horizontal">
                        <TextBlock Text="PassWord:" FontSize="30" FontWeight="bold" TextAlignment="center" Width="150" Height="50"  Margin="40,0, 10, 0"></TextBlock>
                        <TextBlock Background="white" Width="250" Height="60" Margin="10,20,40,20"></TextBlock>
                    </StackPanel>
                    <StackPanel  Orientation="Horizontal">
                        <TextBlock Text="SĐT:" FontSize="30" FontWeight="bold"  Width="150" Height="50"  Margin="40,0, 10, 0"></TextBlock>
                        <TextBlock Background="white" Width="250" Height="60" Margin="10,20,40,20"></TextBlock>
                    </StackPanel>
                    <StackPanel  Orientation="Horizontal">
                        <TextBlock Text="Địa chỉ:" FontSize="30" FontWeight="bold" Width="150" Height="50"  Margin="40,0, 10, 0"></TextBlock>
                        <TextBlock Background="white" Width="250" Height="60" Margin="10,20,40,20"></TextBlock>
                    </StackPanel>
                    <StackPanel  Orientation="Horizontal">
                        <TextBlock Text="Email :" FontSize="30" FontWeight="bold"  Width="150" Height="50"  Margin="40,0, 10, 0"></TextBlock>
                        <TextBlock Background="white" Width="250" Height="60" Margin="10,20,40,20"></TextBlock>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="0" Width="500" Height="180" VerticalAlignment="Bottom">
                    <!--Đăng xuất-->
                    <Border  Width="250" Height="60" Margin="125,0,125,20" BorderBrush="black" BorderThickness="2" CornerRadius="5" >
                        <Button Content="Đăng xuất" FontSize="30" FontWeight="bold" Background="#D25555" ></Button>
                    </Border>
                    <!--Thoát-->
                    <Border  Width="250" Height="60" Margin="125,0,125,20" BorderBrush="black" BorderThickness="2" CornerRadius="5" >
                        <Button Content="Thoát" Foreground="White"  FontSize="30" FontWeight="bold" Background="#D25555" ></Button>
                    </Border>
                </StackPanel>
               <!--Vạch phân cách-->
                <TextBlock Background="black" Margin="496,0,0,40" Grid.RowSpan="2"/>
                <TextBlock Background="black" Grid.ColumnSpan="2" Margin="0,117,0,0"/>
                <!--Phần 2-->
                <StackPanel Grid.Row="1" Grid.Column="1">
                    <StackPanel Width="500" Height="100" Orientation="Horizontal">
                        <Button Content="⏳" Width="80" Height="80" FontSize="50" Margin="30, 20, 20, 0" ></Button>
                        <Button Content="📦" Width="80" Height="80" FontSize="50" Margin="20, 20, 20, 0" ></Button>
                        <Button Content="🚚" Width="80" Height="80" FontSize="50" Margin="20, 20, 20, 0" ></Button>
                        <Button Content="✔️" Width="80" Height="80" FontSize="50" Margin="20, 20, 20, 0" ></Button>
                    </StackPanel>
                    <StackPanel Width="500" Height="20" Orientation="Horizontal">
                        <TextBlock Text="Chờ xác nhận" Width="80" Height="20" TextAlignment="center" FontSize="13" Margin="30, 0, 20, 0"/>
                        <TextBlock Text="Chờ giao" Width="80" Height="20" TextAlignment="center" FontSize="13" Margin="20, 0, 20, 0"/>
                        <TextBlock Text="Đang giao" Width="80" Height="20" TextAlignment="center" FontSize="13" Margin="20, 0, 20, 0"/>
                        <TextBlock Text="Đã giao" Width="80" Height="20" TextAlignment="center" FontSize="13" Margin="20, 0, 20, 0"/>
                    </StackPanel>
                    <StackPanel Width="500" Height="200" Orientation="Horizontal">
                        <Border Width="200" Height="150" BorderBrush="black" Margin="35,25,25,25" BorderThickness="2" CornerRadius="10">
                            <TextBlock ></TextBlock>
                        </Border>
                        <Border Width="200" Height="150" BorderBrush="black" Margin="15,25,35,25" BorderThickness="2" CornerRadius="10">
                            <TextBlock></TextBlock>
                        </Border>
                    </StackPanel>
                    <StackPanel Width="500" Orientation="Vertical">
                        <Border Width="250" Height="60" Margin="125,75,125,10"  BorderBrush="black" BorderThickness="2" CornerRadius="5">
                            <Button Content="Đăng kí Store" FontSize="30" FontWeight="bold" Background="#E4ADAD"></Button>
                        </Border>
                        <Border Width="250" Height="60" Margin="125,10, 125,0" BorderBrush="black" BorderThickness="2" CornerRadius="5">
                            <Button Content="Đăng kí Shiper"  FontSize="30" FontWeight="bold" Background="#E4ADAD"></Button>
                        </Border>
                    </StackPanel>
                </StackPanel>
                
                



            </Grid>
        </Border>
    </Grid>
</Window>
