<Window x:Class="ShopLink.View.Register_Account"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopLink.ViewModel"
        mc:Ignorable="d"
        Title="Register_Account" Width="1440" Height="900" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" Background ="#F5F6F8">
    <Grid>
        <Grid Width="400" Height ="500" Background="#FFFFFF">
            <!--Logo-->
            <Image Source="/Asset/Images/LogIn_Store.jpg" Margin="0,-2,292,374"/>
            <Image Source="/Asset/Images/LogIn_Shiper.jpg" Margin="280,0,5,360"/>
            <TextBlock Text="ShopLink" Foreground="#478EF0" FontSize="35" FontWeight="Bold" Margin="128,34,110,386"/>
            <TextBlock  Text="Name:" FontSize="20" FontWeight="Bold" Margin="18,127,310,333" />
            <TextBox  Height="40" Background="#D9D9D9" Margin="128,117,18,323"/>
            <TextBlock  Text="PassWord:" FontSize="20" FontWeight="Bold" Margin="18,189,279,271" />
            <TextBox  Height="40" Background="#D9D9D9" Margin="128,179,18,261" RenderTransformOrigin="0.443,2.799"/>
            <TextBlock  Text="Phone:" FontSize="20" FontWeight="Bold" Margin="18,250,310,210" />
            <TextBox  Height="40" Background="#D9D9D9" Margin="128,240,18,200"/>
            <TextBlock  Text="Address:" FontSize="20" FontWeight="Bold" Margin="18,310,286,150" />
            <TextBox  Height="40" Background="#D9D9D9" Margin="128,300,18,140"/>
            <TextBlock  Text="Email:" FontSize="20" FontWeight="Bold" Margin="18,374,310,86" />
            <TextBox  Height="40" Background="#D9D9D9" Margin="128,364,18,76"/>
            <!--Border-->
            <Border BorderBrush="Black" BorderThickness="2" CornerRadius="10"/>
            <!--Tạo tài khoản-->
            <Button  Foreground ="White" Content="Tạo tài khoản" FontSize="25" FontWeight="Bold"  Width="360" Height="50" Background="#007BFF" Margin="22,440,18,10"/>
            



        </Grid>
        
    </Grid>
</Window>
