<Window x:Class="ShopLink.View.User"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopLink.ViewModel"
        mc:Ignorable="d"
        Title="LogIn" Width="1440" Height="900" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" Background ="#F5F6F8">

    <Grid>
        <!--Thanh công cụ-->
        <Grid Height="175" Width="1440" VerticalAlignment="Top" Background="#D9D9D9">
            <!--Logo-->
            <StackPanel>
                <Border BorderBrush="#FF3C8AF6" CornerRadius="10" BorderThickness="6" Margin="0 ,0,1229,0"  Height="176" Width="203">
                    <TextBlock Text="ShopLink" Foreground="#478EF0" FontSize="45" FontWeight="Bold" TextAlignment="Center"
                    HorizontalAlignment="Center" Margin="0,54,0,37"/>
                </Border>
            </StackPanel>
            <!--Tìm kiếm-->
            <Border BorderBrush="Black" BorderThickness="2" CornerRadius="4" Width="700" Height="50">
                <DockPanel Width="700" Height="50" Background="White">
                    <Image Source="C:\Users\Admin\source\repos\ShopLink\Asset\Images\icons8-search-50.png"></Image>
                    <TextBox></TextBox>
                </DockPanel>
            </Border>
            <StackPanel Width="700" Margin="370,122,370,0" Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="Mới nhất" Width="150" Height="40" FontSize="12.5" Background="#FFE8C0C0" Margin="5,5,117,5"></Button>
                <Button Content="Bán chạy" Width="150" Height="40" FontSize="12.5" Background="#FFE8C0C0" Margin="5, 5, 117, 5"></Button>
                <Button Content="Đắt nhất" Width="150" Height="40" FontSize="12.5" Background="#FFE8C0C0" Margin="5"/>
            </StackPanel>
            <!--Tính năng-->
            <Button  Content="💬" Width="35" Height="35" RenderTransformOrigin="0.819,-0.858" Margin="1155,40,250,100"/>
            <Button Content="🔔" Width="35" Height="35" Margin="1213,40,192,100"/>
            <Button Content="Thông tin" Height="35" Padding="10,5" Background="Gray" Foreground="White" Margin="1276,40,50,100"/>
            <Button Content="👤" Width="35" Height="35" Background="Gray" Margin="1395,40,10,100"/>
            <Button Content="🛒" RenderTransformOrigin="1.175,2.287" Margin="1253,112,104,0" Background="#D9D9D9"/>
            <Button Content="⚙" Margin="1361,112,0,0"/>
            <Button Content="+" Command="{Binding MoThemSanPhamCommand}" FontSize="30" Margin="1114,106,250,-1" Background="red"/>




        </Grid>
        <ScrollViewer Width="1240" Height="660" VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Disabled" Margin="100,204,100,20" Background="#F0EEEE">
            <ItemsControl ItemsSource="{Binding SanPhams}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="black" BorderThickness="3" CornerRadius="4" Height="300" Width="200" Margin="22" Padding="0" ClipToBounds="True">
                            <Button Background="Gray" Padding="0" BorderThickness="0">
                                <Grid Height="297">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="2*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Ảnh -->
                                    <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1" CornerRadius="4" ClipToBounds="True">
                                        <Image Source="{Binding HinhAnh}" Stretch="UniformToFill" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Border>

                                    <!-- Thông tin sản phẩm -->
                                    <StackPanel Grid.Row="1" Background="Transparent" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding TenSanPham}" HorizontalAlignment="Center" Margin="0,5,0,0"/>

                                        <TextBlock HorizontalAlignment="Center" Margin="0,0,0,5">
                                    <Run Text="Khuyến mãi: "/>
                                    <Run Text="{Binding KhuyenMai}"/>
                                    <Run Text="%"/>
                                        </TextBlock>
                                        <TextBlock HorizontalAlignment="Center" Margin="0,0,0,10">
                                    <Run Text="Giá gốc: "/>
                                    <Run Text="{Binding GiaGoc}"/>
                                    <Run Text=" VNĐ"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- Địa chỉ cửa hàng -->
                                    <TextBlock Grid.Row="2" Text="{Binding DiaChi}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,5,0,5" FontSize="12" Foreground="White"/>
                                </Grid>
                            </Button>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

    </Grid>
</Window>