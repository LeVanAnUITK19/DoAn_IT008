<Window x:Class="ShopLink.View.ThemSanPham"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShopLink.View"
        mc:Ignorable="d"
        Title="ThemSanPham"  Width="1440" Height="900" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" Background ="#F5F6F8">
    <Grid>
        <!--Border-->
        <Border BorderBrush="Black" BorderThickness="3" CornerRadius="8" Width="1000" Height="600"  Margin="220,142,220,142">
            <Grid Width="1000" Height="600" Background="white" >
                <!--Chia bố cục-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="480"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--Logo-->
                <Grid Grid.Row="0">
                    <Image Source="C:\Users\Admin\source\repos\ShopLink\Asset\Images\LogIn_Store.jpg" Margin="223,16,0,16" HorizontalAlignment="Left" Width="119"/>
                    <TextBlock Text="Thêm sản phẩm"   TextAlignment="Center"   Foreground="#478EF0" FontSize="45" FontWeight="Bold" Margin="336,30,-188,40" />
                    <Image Source="C:\Users\Admin\source\repos\ShopLink\Asset\Images\LogIn_Shiper.jpg" Margin="584,2,-412,2"/>
                </Grid>
                <!--Form1-->
                <Grid Grid.Column="0" Grid.Row="1">

                    <TextBlock Text="Tên:" Height="40" Margin="30,15,393,424" FontSize="30" FontWeight="Bold" />
                    <TextBox Text="{Binding SanPham.Ten}" FontSize="25" Margin="148,23,28,417" Height="40"/>

                    <TextBlock Text="Mô tả:"  FontSize="30" FontWeight="Bold" Margin="30,104,366,336"/>
                    <TextBox Text="{Binding SanPham.MoTa}" FontSize="25" Margin="147,100,30,340" Height="40" RenderTransformOrigin="0.498,2.378"/>

                    <TextBlock Text="Ngày hết hạn:" FontSize="30" FontWeight="Bold" Margin="30,188,269,242"/>
                    <DatePicker SelectedDate="{Binding SanPham.NgayHetHan}" FontSize="25"  Margin="250,185,30,240" Height="40" RenderTransformOrigin="0.417,2.206"/>

                    <TextBlock Text="Số lượng:" FontSize="30" FontWeight="Bold" Margin="30,272,340,167"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="250,250,30,145" Height="40" Width="140">
                        <Button Content="-" FontSize="25"  Command="{Binding GiamSLCommand}" Width="40" Height="40"/>
                        <TextBlock Text="{Binding SanPham.SoLuong}" TextAlignment="center" Background="gray" Height="40" Width="60"/>
                        <Button Content="+" FontSize="25" Command="{Binding TangSLCommand}" Width="40" Height="40"/>
                    </StackPanel>

                    <Button Content="Thêm" FontSize="30" FontWeight="Bold" Foreground="Black" Command="{Binding ThemCommand}" Background="Salmon" Margin="125,363,125,57" Width="250" Height="60"/>
                </Grid>
                <!--Vạch phân cách-->
                <TextBlock Background="Black" Margin="277,225,283,251" Grid.ColumnSpan="2" Grid.Row="1" RenderTransformOrigin="0.5,0.5">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-90.237"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </TextBlock.RenderTransform></TextBlock>
                <!--Form2-->
                <Grid Grid.Column="1" Grid.Row="1">

                    <TextBlock Text="Giá gốc:" FontSize="30" FontWeight="Bold" Margin="30,15,353,430"/>
                    <TextBox Text="{Binding SanPham.GiaGoc}" FontSize="25" FontWeight="Bold"  Margin="215,12,30,428" Height="40"/>

                    <TextBlock Text="Khuyến mãi:" FontSize="30" FontWeight="Bold" Margin="30,99,293,338" />
                    <TextBox Text="{Binding SanPham.KhuyenMai}" FontSize="25" FontWeight="Bold" Margin="215,99,30,338"/>

                    <TextBlock Text="Hình ảnh:" FontSize="30" FontWeight="Bold" Margin="30,189,326,247"/>
                    <StackPanel Orientation="Horizontal" Margin="215,190,30,240" Height="40">
                        <TextBox Text="{Binding SanPham.HinhAnh}" Width="200"/>
                        <Button Content="Chọn" Command="{Binding ChonAnhCommand}" Width="55"/>
                    </StackPanel>

                    <TextBlock Text="Trạng thái:" FontSize="30" FontWeight="Bold" Margin="30,275,293,162" />
                    <ComboBox SelectedItem="{Binding SanPham.TrangThai}" FontSize="30" FontWeight="Bold" Margin="215,275,30,162">
                        <ComboBoxItem Content="Private"/>
                        <ComboBoxItem Content="Public"/>
                    </ComboBox>

                    <Button Content="Hủy bỏ" FontSize="30" Foreground="white" FontWeight="Bold" Command="{Binding HuyCommand}" Background="#FFD6D6" Width="250" Height="60" Margin="125,363,125,57"/>
                </Grid>


            </Grid>
            </Border>
    </Grid>
</Window>
